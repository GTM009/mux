import ipywidgets as widgets
from IPython.display import display, clear_output
from google.colab import files
import os

print("‚úì Setup complete!")

# ============================================
# SECTION 2: Download/Upload Files
# ============================================

# Create output widget
output = widgets.Output()

# Upload buttons
video_btn = widgets.Button(description="Upload Video", button_style='primary', icon='upload')
audio_btn = widgets.Button(description="Upload Audio", button_style='primary', icon='upload')
subtitle_btn = widgets.Button(description="Upload Subtitles", button_style='primary', icon='upload')

# File storage
uploaded_files = {
    'video': None,
    'audio': None,
    'subtitle': None
}

def upload_video(b):
    with output:
        clear_output()
        print("üìπ Uploading video file...")
        uploaded = files.upload()
        if uploaded:
            uploaded_files['video'] = list(uploaded.keys())[0]
            print(f"‚úì Video uploaded: {uploaded_files['video']}")

def upload_audio(b):
    with output:
        clear_output()
        print("üîä Uploading audio file...")
        uploaded = files.upload()
        if uploaded:
            uploaded_files['audio'] = list(uploaded.keys())[0]
            print(f"‚úì Audio uploaded: {uploaded_files['audio']}")

def upload_subtitle(b):
    with output:
        clear_output()
        print("üìù Uploading subtitle file...")
        uploaded = files.upload()
        if uploaded:
            uploaded_files['subtitle'] = list(uploaded.keys())[0]
            print(f"‚úì Subtitles uploaded: {uploaded_files['subtitle']}")

video_btn.on_click(upload_video)
audio_btn.on_click(upload_audio)
subtitle_btn.on_click(upload_subtitle)

print("\nüìÇ Upload your files:")
display(widgets.VBox([video_btn, audio_btn, subtitle_btn, output]))

# ============================================
# SECTION 3: Select & Preview Files
# ============================================

list_btn = widgets.Button(description="List Uploaded Files", button_style='info', icon='list')
output2 = widgets.Output()

def list_files(b):
    with output2:
        clear_output()
        print("üìã Uploaded Files:")
        print(f"  Video: {uploaded_files['video'] or 'Not uploaded'}")
        print(f"  Audio: {uploaded_files['audio'] or 'Not uploaded'}")
        print(f"  Subtitles: {uploaded_files['subtitle'] or 'Not uploaded'}")
        print("\nAll files in directory:")
        os.system('ls -lh')

list_btn.on_click(list_files)

display(list_btn)
display(output2)

# ============================================
# SECTION 4: Muxing Settings & Output
# ============================================

# Output filename input
output_name = widgets.Text(
    value='output_muxed.mkv',
    description='Output Name:',
    style={'description_width': '100px'},
    layout=widgets.Layout(width='400px')
)

# Mux button
mux_btn = widgets.Button(
    description="üé¨ Start Muxing", 
    button_style='success', 
    icon='check',
    layout=widgets.Layout(width='200px', height='40px')
)

output3 = widgets.Output()

def start_muxing(b):
    with output3:
        clear_output()
        
        # Check if all files are uploaded
        if not all(uploaded_files.values()):
            print("‚ùå Error: Please upload all files (video, audio, subtitles) before muxing!")
            return
        
        output_file = output_name.value
        video = uploaded_files['video']
        audio = uploaded_files['audio']
        subtitle = uploaded_files['subtitle']
        
        print(f"üé¨ Starting muxing process...")
        print(f"  Video: {video}")
        print(f"  Audio: {audio}")
        print(f"  Subtitles: {subtitle}")
        print(f"  Output: {output_file}\n")
        
        # Execute mkvmerge
        cmd = f'mkvmerge -o "{output_file}" "{video}" "{audio}" "{subtitle}"'
        result = os.system(cmd)
        
        if result == 0:
            print(f"\n‚úÖ Muxing successful! Output: {output_file}")
            print(f"\nFile size:")
            os.system(f'ls -lh "{output_file}"')
        else:
            print(f"\n‚ùå Muxing failed! Check the files and try again.")

mux_btn.on_click(start_muxing)

print("\n‚öôÔ∏è Muxing Settings:")
display(output_name)
display(mux_btn)
display(output3)

# ============================================
# SECTION 5: Download Output
# ============================================

download_btn = widgets.Button(
    description="‚¨áÔ∏è Download Output", 
    button_style='warning', 
    icon='download',
    layout=widgets.Layout(width='200px', height='40px')
)

output4 = widgets.Output()

def download_output(b):
    with output4:
        clear_output()
        output_file = output_name.value
        if os.path.exists(output_file):
            print(f"üì• Downloading {output_file}...")
            files.download(output_file)
        else:
            print(f"‚ùå File {output_file} not found! Please mux first.")

download_btn.on_click(download_output)

display(download_btn)
display(output4)
